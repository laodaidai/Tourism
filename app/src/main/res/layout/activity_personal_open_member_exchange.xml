<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/personal_member_bj"
            android:orientation="vertical">
            <com.example.tourism.widget.CustomToolbar
                android:id="@+id/custom_toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/color_blue"
                app:leftButtonIcon="@drawable/btn_arrow_back_selector"
                app:myTitle="兑换会员"
                tools:ignore="MissingConstraints" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginBottom="180dp"
                    android:textSize="45dp"
                    android:textColor="@color/color_white"
                    android:text="会员激活"/>
                <ImageView
                    android:layout_width="225dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/personal_vip"/>

                <EditText
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="90dp"
                    android:hint="请输入兑换券码"
                    android:background="@drawable/personal_edit_bg"/>

                <Button
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="160dp"
                    android:text="立即激活"
                    android:textSize="25sp"
                    android:textColor="@color/color_white"
                    android:background="@color/color_light_yellow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="输入大写兑换码,立即激活即可兑换"
                    android:textSize="12sp"
                    android:textColor="@color/color_black"
                    android:layout_marginTop="210dp"/>
            </FrameLayout>
        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>