<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/prl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srlEnablePreviewInEditMode="false">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <FrameLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/h_back"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            tools:ignore="MissingConstraints" />

                        <com.example.tourism.widget.CircleImageView
                            android:id="@+id/h_head"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            tools:ignore="MissingConstraints" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="65dp"
                            tools:ignore="MissingConstraints">

                            <ImageView
                                android:id="@+id/user_line"
                                android:layout_width="1dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:background="@android:color/white" />

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="账号"
                                android:layout_gravity="center"
                                android:layout_marginRight="30dp"
                                android:textColor="@android:color/white"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/user_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="45dp"
                                android:text="电话号码"
                                android:textColor="@android:color/white"
                                android:textSize="17sp" />
                            <TextView
                                android:id="@+id/re"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="登录 / 注册 "
                                android:layout_gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="17sp" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="95dp"
                            tools:ignore="MissingConstraints">

                            <TextView
                                android:id="@+id/user_follow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="40dp"
                                android:text="关注"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/user_follow_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="15dp"
                                android:text="0"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/user_fans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:layout_gravity="center"
                                android:text="粉丝"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/user_fans_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="65dp"
                                android:layout_gravity="center"
                                android:text="0"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/user_homepage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:layout_marginRight="30dp"
                                android:text="个人主页"
                                android:onClick="btn_my_homepage"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/user_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="right|center"
                                android:layout_marginRight="0dp"
                                android:src="@drawable/personal_arrow_white_right" />
                        </FrameLayout>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center|left"
                            android:background="@color/color_white">


                            <ImageView
                                android:id="@+id/personal_Shopping_Cart_Img"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center|left"
                                android:src="@drawable/personal_shop_car" />
                            <TextView
                                android:id="@+id/personal_Trip_Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:layout_gravity="center|left"
                                android:text="我的行程"
                                android:textSize="15sp"
                                android:textColor="@color/color_black"/>

                            <ImageView
                                android:id="@+id/persongal_shopping_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center|right"
                                android:src="@drawable/personal_arrow_white_right" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/fl_all_order"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/color_white">
                            <ImageView
                                android:id="@+id/personal_Holiday_order_Img"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/personal_order" />
                            <TextView
                                android:id="@+id/personal_Holiday_order_Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:layout_gravity="center|left"
                                android:text="度假全部订单"
                                android:textSize="15sp"
                                android:textColor="@color/color_black"/>

                            <ImageView
                                android:id="@+id/persongal_Holiday_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center|right"
                                android:src="@drawable/personal_arrow_white_right" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/color_white"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:src="@drawable/personal_payment"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/color_black"
                                    android:textSize="12sp"
                                    android:text="待付款"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:src="@drawable/personal_consumption"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/color_black"
                                    android:textSize="12sp"
                                    android:text="待消费"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:src="@drawable/personal_evaluate"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/color_black"
                                    android:textSize="12sp"
                                    android:text="待评价"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="15dp"
                                    android:src="@drawable/personal_refund"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/color_black"
                                    android:textSize="12sp"
                                    android:text="退款中"/>
                            </LinearLayout>
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/btn_coupon"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center|left"
                            android:background="@color/color_white">
                            <ImageView
                                android:id="@+id/personal_Coupon_Img"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center|left"
                                android:src="@drawable/personal_coupon" />
                            <TextView
                                android:id="@+id/personal_Coupon_Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:layout_gravity="center|left"
                                android:text="我的优惠卷"
                                android:textSize="15sp"
                                android:textColor="@color/color_black"/>

                            <ImageView
                                android:id="@+id/persongal_Coupon_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center|right"
                                android:src="@drawable/personal_arrow_white_right" />

                        </FrameLayout>

                        <include layout="@layout/activity_line_not_full"/>

                        <FrameLayout
                            android:id="@+id/btn_mycollection"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/color_white"
                            android:gravity="center|left"
                            android:onClick="my_collection">

                            <ImageView
                                android:id="@+id/personal_Collection_Img"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center|left"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/personal_collection" />

                            <TextView
                                android:id="@+id/personal_Collection_Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:layout_marginLeft="70dp"
                                android:text="我的收藏"
                                android:textColor="@color/color_black"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/persongal_Collection_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|right"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/personal_arrow_white_right" />
                        </FrameLayout>

                        <include layout="@layout/activity_line_not_full"/>

                        <FrameLayout
                            android:id="@+id/btn_mysubscriptions"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center|left"
                            android:onClick="my_subscriptions"
                            android:background="@color/color_white">
                            <ImageView
                                android:id="@+id/personal_Subscribe_Img"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center|left"
                                android:src="@drawable/personal_subscribe" />
                            <TextView
                                android:id="@+id/personal_Subscribe_Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:layout_gravity="center|left"
                                android:text="我的订阅"
                                android:textSize="15sp"
                                android:textColor="@color/color_black"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center|right"
                                android:src="@drawable/personal_arrow_white_right" />

                        </FrameLayout>
                        <include layout="@layout/activity_line_not_full"/>
                        <FrameLayout
                            android:id="@+id/btn_member"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center|left"
                            android:onClick="my_subscriptions"
                            android:background="@color/color_white">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center|left"
                                android:src="@drawable/personal_member_recharge" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:layout_gravity="center|left"
                                android:text="会员充值"
                                android:textSize="15sp"
                                android:textColor="@color/color_black"/>

                            <ImageView
                                android:id="@+id/persongal_Subscribe_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center|right"
                                android:src="@drawable/personal_arrow_white_right" />

                        </FrameLayout>
                        <include layout="@layout/activity_line_not_full"/>

                        <FrameLayout
                            android:id="@+id/btn_holidayprbolem"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center|left"
                            android:layout_marginTop="5dp"
                            android:onClick="my_holiday_prbolem"
                            android:background="@color/color_white">

                            <ImageView
                                android:id="@+id/personal_Feedback_Img"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center|left"
                                android:src="@drawable/personal_feedback" />
                            <TextView
                                android:id="@+id/personal_Feedback_Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="70dp"
                                android:layout_gravity="center|left"
                                android:text="意见反馈"
                                android:textSize="15sp"
                                android:textColor="@color/color_black"/>

                            <ImageView
                                android:id="@+id/persongal_Feedback_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center|right"
                                android:src="@drawable/personal_arrow_white_right" />
                        </FrameLayout>
                        <include layout="@layout/activity_line_not_full"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#00000000">

                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
<!--    </com.baoyz.widget.PullRefreshLayout>-->

    <LinearLayout
        android:id="@+id/ll_state_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <!--状态栏-->
        <View
            android:id="@+id/status_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/color_blue"/>
        <com.example.tourism.widget.CustomToolbar
            android:id="@+id/custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_blue"
            app:rightButtonIcon="@drawable/ic_perm_identity_while_32dp"
            app:myTitle="@string/title_personer"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</RelativeLayout>