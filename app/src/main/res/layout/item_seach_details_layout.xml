<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/color_white"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp"
            app:cardMaxElevation="1dp">

            <ImageView
                android:id="@+id/iv_tourism_pic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/poster_one">

            </ImageView>

            <TextView
                android:id="@+id/tv_travel_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_text_load_translucent_background"
                android:text="跟团游"
                android:textColor="@color/color_white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_end_land"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/select_text_black_background"
                android:text="南宁出发"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/color_white"
                android:textSize="12sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tourism_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="双十一钜惠"
            android:textSize="16sp"
            android:textColor="@color/color_black"
            android:maxLines="2"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0分"
                android:textColor="@color/color_cyan_green"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="135人已出行"
                android:textColor="@color/color_gray"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国旅旅行"
            android:textColor="@color/color_wathet_blue"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游览城市"
                android:textColor="@color/color_gray"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_dividing_line"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_tour_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南宁"
                android:textColor="@color/color_gray"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="12sp"
                android:textColor="@color/color_orange_red"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1470"
                android:textSize="16sp"
                android:textColor="@color/color_orange_red"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起/人"
                android:textSize="12sp"
                android:textColor="@color/color_orange_red"
                android:layout_marginLeft="2dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>