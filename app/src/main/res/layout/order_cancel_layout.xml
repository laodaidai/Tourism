<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue"
        android:orientation="vertical">



    <com.example.tourism.widget.CustomToolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/color_blue"
        app:leftButtonIcon="@drawable/ic_arrow_back"
        app:rightButtonIcon="@drawable/fenxiang"
        app:myTitle="订单详情"
        />


    <com.example.tourism.widget.MyScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_blue"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:text="订单取消"
                android:textColor="@color/color_white"
                android:textSize="18dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#63C9FF"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/tourism_order_cancel_productname"
                    android:background="@color/color_blue"
                    android:textColor="@color/color_white"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="14dp"></TextView>

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="4"
                    android:text=""
                    android:background="@color/color_blue"
                    android:textColor="@color/color_white"
                    android:gravity="center_vertical"
                    android:textSize="14dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/tourism_order_cancel_tripmode"
                    android:background="@color/color_blue"
                    android:textColor="@color/color_white"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="14dp"></TextView>

                <TextView
                    android:id="@+id/tripMode"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="4"
                    android:text=""
                    android:background="@color/color_blue"
                    android:textColor="@color/color_white"
                    android:gravity="center_vertical"
                    android:textSize="14dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:background="@color/color_blue"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/tourism_order_cancel_departureperiod"
                    android:textColor="@color/color_white"
                    android:textSize="14dp"></TextView>

                <TextView
                    android:id="@+id/departurePeriod"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="4"
                    android:text=""
                    android:background="@color/color_blue"
                    android:textColor="@color/color_white"
                    android:gravity="center_vertical"
                    android:textSize="14dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="应付金额"
                    android:background="@color/color_blue"
                    android:textColor="@color/color_white"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="14dp"></TextView>

                <TextView
                    android:id="@+id/amountPayable"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="4"
                    android:text=""
                    android:background="@color/color_blue"
                    android:textColor="#FFEB3B"
                    android:gravity="center_vertical"
                    android:textSize="17dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_white">

                <LinearLayout
                    android:id="@+id/lianxigongyingshang"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/lianxi">
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="15dp"
                        android:text="联系供应商"
                        android:textColor="@color/color_blue"
                        android:gravity="center_vertical|center_horizontal"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/xiangqing">
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="15dp"
                        android:text="产品详情"
                        android:textColor="@color/color_blue"
                        android:gravity="center_vertical|center_horizontal"></TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="是否需要以下帮助"
                    android:textSize="19dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_black">
                </TextView>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="在线服务"
                    android:textColor="@color/color_blue"
                    android:background="@drawable/order_cancel"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"></Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="商家拒绝退款"
                    android:textColor="@color/color_blue"
                    android:background="@drawable/ol_help"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="联系人信息"
                    android:textSize="19dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_black"
                    android:layout_marginTop="10dp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="联系人"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/contacts"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="40dp"
                        android:text="联系人"
                        android:textSize="19dp"
                        android:gravity="center_vertical">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="手机号"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="40dp"
                        android:text="联系人"
                        android:textSize="19dp"
                        android:gravity="center_vertical">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="QQ号"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/qqNumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="联系人"
                        android:textSize="19dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="留言"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/contactsComment"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="40dp"
                        android:text="联系人"
                        android:textSize="19dp"
                        android:gravity="center_vertical">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="旅客信息"
                    android:textSize="19dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_black"
                    android:layout_marginTop="10dp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="旅客姓名"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/passengerName"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="40dp"
                        android:text="联系人"
                        android:textSize="19dp"
                        android:gravity="center_vertical">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="身份证"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/passengerNumber"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="30dp"
                        android:text="联系人"
                        android:textSize="19dp"
                        android:gravity="center_vertical">
                    </TextView>

                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="价格明细"
                    android:textSize="19dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_black"
                    android:layout_marginTop="10dp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="成人旅客"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/adultP"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="40dp"
                        android:text="联系人"
                        android:textSize="19dp"
                        android:gravity="center_vertical">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="房差"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/roomDifference"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="40dp"
                        android:text="联系人"
                        android:textSize="19dp"
                        android:gravity="center_vertical">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="订单总额"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/orderTotal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="联系人"
                        android:textSize="19dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="留言"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/orderComment"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="40dp"
                        android:text="联系人"
                        android:textSize="19dp"
                        android:gravity="center_vertical">
                    </TextView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="订单信息"
                    android:textSize="19dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_black"
                    android:layout_marginTop="10dp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="订单号"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/orderNumber"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="40dp"
                        android:text="联系人"
                        android:textSize="19dp"
                        android:gravity="center_vertical">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="订单时间"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/orderTime"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="30dp"
                        android:text="联系人"
                        android:textSize="19dp"
                        android:gravity="center_vertical">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:text="供应商"
                        android:textSize="19dp"
                        android:gravity="center_vertical|center_horizontal">
                    </TextView>

                    <TextView
                        android:id="@+id/supplier"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="30dp"
                        android:text="联系人"
                        android:textSize="19dp"
                        android:gravity="center_vertical">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_white">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="其他帮助"
                    android:textSize="19dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_black">
                </TextView>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="拨打客服电话"
                    android:textColor="@color/color_blue"
                    android:background="@drawable/order_cancel"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"></Button>

            </LinearLayout>

        </LinearLayout>


    </com.example.tourism.widget.MyScrollView>

    </LinearLayout>


</LinearLayout>